<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="@drawable/sender_box">

    <ImageView
        android:id="@+id/ivSenderImage"
        android:layout_width="@dimen/send_icon_size"
        android:layout_height="@dimen/send_icon_size"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:drawable/ic_menu_myplaces" />

    <TextView
        android:id="@+id/tvSenderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/sender_name_text_color"
        android:textSize="12sp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/ivSenderImage"
        app:layout_constraintStart_toEndOf="@id/ivSenderImage"
        app:layout_constraintTop_toTopOf="@id/ivSenderImage"
        tools:text="Frank Lampard" />

</androidx.constraintlayout.widget.ConstraintLayout>