<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="230dp"
    android:layout_height="32dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/answer_bg">

    <ImageView
        android:id="@+id/ivAnswerIcon"
        android:layout_width="@dimen/answer_icon_size"
        android:layout_height="@dimen/answer_icon_size"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_btn_close" />


    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivAnswerIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Liverpool will win the league" />

</androidx.constraintlayout.widget.ConstraintLayout>